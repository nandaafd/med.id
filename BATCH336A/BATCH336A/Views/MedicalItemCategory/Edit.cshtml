@model VMMMedicalItemCategory?
@{
    Layout = null;
}

<form id="frmMedicalitemcategory" asp-action="Edit" asp-controller="MedicalItemCategory">
    <div class="card">
        <div class="card-body">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="ModifiedBy" value="@Context.Session.GetInt32("userId")" />
            <div class="input-group mb-3">
                <label class="input-group-text col-3">Name</label>
                <input required name="Name" id="name" type="text" class="form-control" placeholder="Masukkan nama kategori..." value="@Model.Name">
            </div>
            <div id="errorContainer" class="text-danger" aria-hidden="true"><ul></ul></div>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <input class="btn btn-primary" type="submit" value="Submit">
            <button class="btn btn-secondary ms-2" type="button" data-bs-dismiss="modal">cancel</button>
        </div>
    </div>
</form>

<script>
    $("#staticModalLabel").html("@ViewBag.Title");

    $("#frmMedicalitemcategory").validate({
        errorClass: "text-danger",
        errorLabelContainer: "#errorContainer",
        wrapper: "li",
        rules: {
            Name: {
                minlength: 2,
                maxlength: 50,
                "required": true,
                "noSpacesOnly": true
            }
        },
        messages: {
            Name: {
                minlength: "Nama harus memiliki minimal 2 huruf",
                maxlength: "Nama harus memiliki Maksimal 50 huruf",
                "required": "Nama Kategori harus diisi",
                "noSpacesOnly": "Input tidak boleh hanya berisi spasi"
            }
        }
    });

    $("#frmMedicalitemcategory").submit(function (event) {
        //Disable submit default
        event.preventDefault();

        // String containing multiple spaces
        let str = $("#name").val();

        // Replace multiple spaces with single space
        let name = str.trim().split(/[\s,\t,\n]+/).join(' ');
        $("#name").val(name);

        if ($("#frmMedicalitemcategory").valid()) {
            $.ajax({
                url: '/MedicalItemCategory/Edit',
                type: 'post',
                data: $("#frmMedicalitemcategory").serialize(),
                dataType: 'json',
                beforeSend: function () {

                },
                success: function (response) {
                    if (response.statusCode == 200 || response.statusCode == 201) {
                        location.reload();
                    }
                    else {
                        debugger;
                        $("#errorContainer").html("<li>" + response.message + "</li>");
                        $("#errorContainer").show();
                    }
                },
                error: function (errResponse) {
                    debugger;
                }
            });
        }
    });

    $.validator.addMethod("noSpacesOnly", function (value, element) {
        return /\S/.test(value);
    }, "Cannot be all spaces");
</script>