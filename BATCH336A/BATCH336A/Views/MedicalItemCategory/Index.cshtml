@model Pagination<VMMMedicalItemCategory>?
@{
}

<partial name="Partial/_ModalSpec" />

<div class="card">
    <div class="card-header h3">Kategori Produk Kesehatan</div>
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <form class="w-50" id="frmFilter" asp-controller="MedicalItemCategory" asp-action="Index">
                <div class="input-group">
                    <input id="filter" name="filter" type="text" class="form-control" placeholder="Nama Kategori..." aria-label="Filter" aria-describedby="iSearch" value="@ViewBag.Filter">
                    <button type="submit" class="btn btn-secondary input-group-text" id="iSearch"><i class="fa-solid fa-search"></i></button>
                </div>
            </form>
            <button class="btn btn-success" id="tambahMedicalitemcategory" title="Add" data-bs-toggle="modal" data-bs-target="#staticModal">Tambah Kategori</i></button>
        </div>
        <div>
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th class="col-1"></th>
                        <th>Kategori Produk Kesehatan</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count != 0)
                    {
                        foreach (VMMMedicalItemCategory data in Model)
                        {
                            <tr>
                                <td class="col-1"></td>
                                <td>@data.Name</td>
                                <td class="col-4 text-center">
                                    <div class="btn-group mb-3">
                                        <button class="btn btn-warning" title="Edit" data-id="@data.Id" data-bs-toggle="modal" data-bs-target="#staticModal">Ubah</button>
                                        <button class="btn btn-danger" title="Delete" data-id="@data.Id" data-bs-toggle="modal" data-bs-target="#staticModal">Hapus</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-decoration-none">Spesialisasi tidak ditemukan</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-center">
        <div class="input-group w-25">
            <a class="btn btn-secondary col-2 @(Model.PageIndex <= 1 ? "disabled": "")" title="Previous Page"
               asp-controller="MedicalItemCategory" asp-action="Index" asp-route-filter="@ViewBag.Filter"
               asp-route-currPageSize="@ViewBag.PageSize"
               asp-route-pageNumber="@(Model.PageIndex <= 1 ? Model.PageIndex : Model.PageIndex-1)">
                <i class="fas fa-chevron-left"></i>
            </a>
            <div class="input-group-text text-center col-6"><span class="w-100">@Model.PageIndex of @Model.TotalPages</span></div>
            <a class="btn btn-secondary col-2 @(Model.PageIndex >= Model.TotalPages ? "disabled": "")" title="Next Page"
               asp-controller="MedicalItemCategory" asp-action="Index" asp-filter="@ViewBag.Filter"
               asp-route-currPageSize="@ViewBag.PageSize"
               asp-route-pageNumber="@(Model.PageIndex >= Model.TotalPages ? Model.PageIndex : Model.PageIndex+1)"><i class="fas fa-chevron-right"></i></a>
        </div>
    </div>
</div>

<script>
    $("#tambahMedicalitemcategory").click(function (event) {
        $("#staticModalBody").load("/MedicalItemCategory/Add");
    });

    $(".btn-warning").click(function (event) {
        let specId = $(this).data("id");
        $("#staticModalBody").load("/MedicalItemCategory/Edit/" + specId);
    });

    $(".btn-danger").click(function (event) {
        let specId = $(this).data("id");
        $("#staticModalBody").load("/MedicalItemCategory/Delete/" + specId);
    });
</script>